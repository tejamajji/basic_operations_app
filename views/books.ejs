<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Books</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>My Books</h1>
    <script src="/bubbleeffect.js"></script>   

    
    <!-- Search Form -->
    <form action="/books/search" method="GET">
        <input type="text" name="search" value="<%= searchTerm %>" placeholder="Search by title..." required>
        <button type="submit">Search</button>
    </form>
    
    <!-- Books List -->
    <div class="books">
        <% books.forEach(book => { %>
        <div class="book-card">
            <h2><%= book.title %></h2>
            <p><%= book.author %></p>
            <a href="/books/view/<%= book._id %>">View</a>
        </div>
        <% }) %>
    </div>
    
    <!-- Link to all books -->
    <a href="/books/all">View All Books</a>
    
</body>
</html>
